<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
    <script language="javascript" src="./jquery-3.2.0.min.js" type="text/javascript"></script>
  </head>
  <body>
  	<div id="container">
	    <!-- <h1><%= title %></h1>
	    <p>Welcome to <%= title %></p> -->
	    <%- include('header.ejs',{cartTotal: cartTotal}); %>

	  	<h3>Checkout</h3>
	<form>
		<fieldset>
			<legend>Info</legend>
			First Name:<br>
			<input type="text" name="firstname" class = "required" value = "<%= user.firstname %>"/>
			<p class="errorMessage">* Field Required</p><br>
			Last Name:<br>
			<input type="text" name="lastname" class = "required" value = "<%= user.lastname %>"/>
			<p class="errorMessage">* Field Required</p><br>
			Email:<br>
			<input type="text" name="email" class = "required" value = "<%= user.email %>"/>
			<p class="errorMessage">* Field Required</p><br>
			Phone:<br>
			<input type="text" name="phone" class = "required" value = "<%= user.phone %>"/>
			<p class="errorMessage">* Field Required</p><br>
		</fieldset>
		<fieldset>
			<legend>Delivery Address</legend>
			Country:<br>
			<input type="text" name="country" class = "required" value = "<%= user.country %>"/>
			<p class="errorMessage">* Field Required</p><br>
			Street Address:<br>
			<input type="text" name="address" class = "required" value = "<%= user.address %>"/>
			<p class="errorMessage">* Field Required</p><br>
			Apt / Ste / Floor:<br>
			<input type="text" name="apt" data-optional="true" value = "<%= user.apt %>"/><br>
			Zip Code:<br>
			<input type="text" name="zipcode" class = "required" value = "<%= user.zipCode %>"/>
			<p class="errorMessage">* Field Required</p><br>

		</fieldset>
		<fieldset>
			<legend>Payment Info</legend>
			<label>Payment Type</label> <br>
			<select id="paymentOption">
				<option value = "credit">Credit</option>
				<option value = "cash">Cash</option>
			</select><br>
			<div class = "creditContainer">
				Card Number:<br>
				<input type="text" name="cardnumber" class = "credit"/>
				<p class="errorMessage">* Field Required</p><br>
				Security Code:<br>
				<input type="text" name="securitycode"  class = "credit"/>
				<p class="errorMessage">* Field Required</p><br>
				Expiration Date:<br>
				<input type="text" name="cardexpire"  class = "credit"/>
				<p class="errorMessage">* Field Required</p><br>
				<!-- <select>
					<option value="01">01 - January</option>
					<option value="02">02 - February</option>
					<option value="03">03 - March</option>
					<option value="04">04 - April</option>
					<option value="05">05 - May</option>
					<option value="06">06 - June</option>
					<option value="07">07 - July</option>
					<option value="08">08 - August</option>
					<option value="09">09 - September</option>
					<option value="10">10 - October</option>
					<option value="11">11 - November</option>
					<option value="12">12 - December</option>
				</select><br> -->
				Name on Card:<br>
				<input type="text" name="cardname" class = "credit" />
				<p class="errorMessage">* Field Required</p><br>
				Zip Code:<br>
				<input type="text" name="cardzip"  class = "credit"/>
				<p class="errorMessage">* Field Required</p><br>
			</div>
		</fieldset>

		<input type = "submit" value="submit" id="payButton"/>
	</form>

	<div>
		<h3>Total:</h3>
		<p><%= cartTotal%></p>
	</div>

	<!-- <button id="payButton">Pay Now</button> -->

	    <%- include('footer.ejs',{}); %>
	</div>

	<script type = "text/javascript" src = "/checkoutJS.js"></script>
	


</script>

  </body>
</html>
