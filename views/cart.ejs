<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script language="javascript" src="./jquery-3.2.0.min.js" type="text/javascript"></script>
  </head>
  <body>
  	<div id="container">
	    <%- include('header.ejs',{cartTotal: cartTotal}); %>

	    <h3>Cart</h3>
		<div class = "cart">
		</div>
		<br>
		<div>
			<h4>
				Total Price:
				<span id="totalprice"><%= cartTotal%></span>
			</h4>
		</div>
		<br>
		<div id = "couponList">
		</div>
		<form id="couponForm">
			<label for="couponcode">Coupon Code:</label><br>
			<input required type = "text" name = "couponcode"/><br>
			<input type = "submit" value = "Submit Coupon Code"/><br>
		</form>
		<br><br>
		<form action="./checkout">
		    <input type="submit" value="Proceed to Checkout" />
		</form>
		<!-- <button id="checkoutButton" href="./checkout">Proceed to Checkout</button> -->
<!-- <a id="checkoutButton" href="./checkout">Proceed to Checkout</a> -->

	    <%- include('footer.ejs',{}); %>
	</div>

	<script src = "/itemDatas.js"></script>

	<script type="text/javascript" src = "/cartAjax.js"></script>
  </body>
</html>
